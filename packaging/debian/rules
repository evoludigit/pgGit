#!/usr/bin/make -f

# Debian packaging rules for pgGit
# See debhelper(7) for more information

%:
	dh $@ --with pgxs

override_dh_auto_install:
	dh_auto_install -- USE_PGXS=1

override_dh_auto_test:
	# Skip tests during package build - they require running PostgreSQL
	# Tests are run in CI instead
	echo "Tests skipped during package build"