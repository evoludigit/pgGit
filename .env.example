# Phase 8 API Configuration - Copy to .env and fill in values

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=pggit
DATABASE_USER=postgres
DATABASE_PASSWORD=your-password-here

# Webhook Configuration
WEBHOOK_ENCRYPTION_KEY=your-encryption-key-here-32-chars
WEBHOOK_SIGNING_SECRET=your-signing-secret-here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4
LOG_LEVEL=INFO

# Redis Configuration (for distributed rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Monitoring Configuration
PROMETHEUS_PUSHGATEWAY_URL=http://localhost:9091
ENABLE_METRICS=true

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_STORAGE=redis

# Replication Configuration
REPLICATION_ENABLED=true
PRIMARY_DATABASE_URL=postgresql://user:password@primary.us-east.pggit.io/pggit
REPLICA_ENABLED_REGIONS=eu-west,us-west,apac

# TLS Configuration
TLS_ENABLED=true
TLS_CERT_PATH=/etc/ssl/certs/server.crt
TLS_KEY_PATH=/etc/ssl/private/server.key
TLS_CA_PATH=/etc/ssl/certs/ca.crt

# CORS Configuration
CORS_ORIGINS=https://dashboard.pggit.io,https://api.pggit.io

# Cache Configuration
CACHE_TYPE=hybrid  # in-memory or redis or hybrid
CACHE_MAX_SIZE_MEMORY=10000
CACHE_TTL_SECONDS=60
CACHE_REDIS_URL=redis://localhost:6379/0

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_MULTI_REGION=false
ENABLE_ML_PREDICTIONS=true
