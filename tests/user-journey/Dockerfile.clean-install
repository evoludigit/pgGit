# User Journey Test Dockerfile
# Simulates a fresh user environment for testing installation and basic workflows
# Based on Ubuntu 22.04 to match common user environments

FROM ubuntu:22.04

# Prevent interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Install PostgreSQL 17 client and development tools
# This matches what a typical user would install following the docs
RUN apt-get update && apt-get install -y \
    postgresql-client-17 \
    postgresql-server-dev-17 \
    build-essential \
    make \
    gcc \
    git \
    curl \
    ca-certificates \
    gnupg \
    lsb-release \
    sudo \
    && rm -rf /var/lib/apt/lists/*

# Add PostgreSQL 17 repository (required for Ubuntu 22.04)
RUN sh -c 'echo "deb http://apt.postgresql.org/pub/repos/apt $(lsb_release -cs)-pgdg main" > /etc/apt/sources.list.d/pgdg.list' \
    && curl -fsSL https://www.postgresql.org/media/keys/ACCC4CF8.asc | gpg --dearmor -o /usr/share/keyrings/postgresql-keyring.gpg \
    && chmod 644 /usr/share/keyrings/postgresql-keyring.gpg \
    && sed -i 's|deb http|deb [signed-by=/usr/share/keyrings/postgresql-keyring.gpg] http|' /etc/apt/sources.list.d/pgdg.list \
    && apt-get update \
    && apt-get install -y postgresql-client-17 postgresql-server-dev-17 \
    && rm -rf /var/lib/apt/lists/*

# Install Python 3.11 and dependencies for test runner
RUN apt-get update && apt-get install -y \
    python3.11 \
    python3.11-venv \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Create a non-root user (simulates typical user environment)
RUN useradd -m -s /bin/bash testuser \
    && echo 'testuser ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers

# Set working directory
WORKDIR /workspace

# Copy the entire pgGit source
COPY . /workspace/

# Set ownership to testuser
RUN chown -R testuser:testuser /workspace

# Switch to testuser for installation testing
USER testuser

# Install Python test dependencies
RUN python3.11 -m pip install --user pytest psycopg[binary] pyyaml

# Default command runs the test suite
CMD ["python3.11", "-m", "pytest", "tests/user-journey/test_user_journey.py", "-v", "--tb=short"]
